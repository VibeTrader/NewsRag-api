# ============================================
# Development Environment Configuration
# Copy this to dev.tfvars to use
# ============================================

# Environment configuration
environment = "dev"

# Resource Group Overrides
service_resource_group_name = "VibetraderCoredevelopment"

# Dynamic Tags
created_by   = "haripriya"
created_date = "2025-12-24"

# Container App Configuration
# Serverless: Scale to zero when not in use
min_replicas = 0
max_replicas = 1
cpu          = 0.5
memory       = "1.0Gi"

# App Service tier configuration (Legacy/unused by new module but kept for var validation)
app_service_plan_sku  = "B1"
app_service_plan_tier = "Basic"

# Health check endpoint
health_check_path = "/health"

# Alert configuration
alert_email       = "haripriyaveluchamy@aity.dev"
slack_webhook_url = "" 

# Log Analytics retention
log_retention_days = 30

# Application Settings
# Application Settings
app_settings = {
  # Core System
  WEBSITES_ENABLE_APP_SERVICE_STORAGE = "false"
  WEBSITES_PORT                       = "8000"
  SCM_DO_BUILD_DURING_DEPLOYMENT      = "true"
  ENVIRONMENT                        = "development"
  PYTHON_VERSION                     = "3.12"
  PYTHONUNBUFFERED                   = "1"
  PORT                               = "8000"
  
  # FastAPI
  API_HOST                           = "0.0.0.0"
  API_PORT                           = "8000"
  HEALTH_CHECK_ENABLED               = "true"
  WEBSITE_HEALTHCHECK_MAXPINGFAILURES = "10"
  WEBSITES_CONTAINER_START_TIME_LIMIT = "1800"

  # App Business Logic
  CACHE_TTL                   = "3600"
  DEFAULT_ARTICLE_LIMIT       = "50"
  MAX_ARTICLE_CONTENT_CHARS   = "10000"
  MAX_CHUNK_SIZE              = "1000"
  SUMMARY_CACHE_SIZE          = "1000"
  SUMMARY_CACHE_TTL           = "3600"
  ENABLE_ORYX_BUILD           = "true"

  # NOTE: External Service Config (OpenAI/Qdrant) is now passed via CI/CD Variables/Secrets
}
